{
    "optimizer": {
        "enabled": true,
        "runs": 200
    },
    "evmVersion": "paris",
    "remappings": [
        ":@thirdweb-dev/=node_modules/@thirdweb-dev/",
        ":ds-test/=lib/forge-std/lib/ds-test/src/",
        ":forge-std/=lib/forge-std/src/"
    ],
    "outputSelection": {
        "*": {
            "*": [
                "evm.bytecode",
                "evm.deployedBytecode",
                "devdoc",
                "userdoc",
                "metadata",
                "abi"
            ]
        }
    }
}