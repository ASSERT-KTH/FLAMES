        "@prb/math/=lib/prb-math/src/",
        "@prb/test/=lib/prb-test/src/",
        "XEN-crypto/=lib/XEN-crypto/contracts/",
        "abdk-libraries-solidity/=lib/abdk-libraries-solidity/",
